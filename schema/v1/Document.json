{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ssc-ai.github.io/satsim/schema/v1/Document.json",
    "title": "SatSim JSON Document",
    "description": "Describes a SatSim configuration document.",
    "type": "object",
    "properties": {
        "sim": {
            "description": "The simulation parameters.",
            "$ref": "Sim.json"
        },
        "fpa": {
            "description": "The focal plane array parameters.",
            "$ref": "Fpa.json"
        },
        "background": {
            "description": "The background parameters.",
            "$ref": "Background.json"
        },
        "geometry": {
            "description": "The geometry parameters.",
            "$ref": "Geometry.json"
        }
    },
    "required": ["sim", "fpa", "background", "geometry"]
}